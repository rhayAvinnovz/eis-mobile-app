<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eis">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ui.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.EIS">
        <activity
            android:name=".ui.main.AreaFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EIS.NoActionBar" />
        <activity
            android:name=".ui.main.MobileFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EIS.NoActionBar" />
        <activity
            android:name=".ui.main.MobileFormEdit"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EIS.NoActionBar" />
        <activity
            android:name=".ui.main.AreaFormEdit"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EIS.NoActionBar" />
        <activity
            android:name=".ui.main.StationaryFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EIS.NoActionBar" />
        <activity
            android:name=".ui.main.AreaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EIS.NoActionBar" />
        <activity
            android:name=".ui.main.MobileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EIS.NoActionBar" />
        <activity
            android:name=".ui.main.StationaryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EIS.NoActionBar" />
        <activity
            android:name=".ui.main.DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EIS.NoActionBar" />
        <activity
            android:name=".ui.main.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EIS.NoActionBar" />
        <activity
            android:name=".ui.main.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EIS.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>